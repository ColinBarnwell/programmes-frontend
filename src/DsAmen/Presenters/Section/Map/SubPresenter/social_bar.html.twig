{%- if social_bar.getSocialMediaDetails() -%}
    <div class="grid__item map__item 1/1" data-map-column="social-bar">
        <div class="map-social-icons media media--row br-box-secondary">
            <span class="map-social__label gel-long-primer">{{- tr('find_us_at') -}}</span>
            <ul class="list-inline list-inline--social-bar">
                {%- for details in social_bar.getSocialMediaDetails() -%}
                    <li class="map-social__icon br-secondary-link-onbg015--hover">
                        {% if details.getType() == 'ugc' %}
                            <a
                                {{ get_ati_attributes('social-'~details.getType()|lower)|attrs  }}
                                href="{{ social_bar.getUGCHref(details) }}"
                                title="{{ details.getTitle()|default(tr('contact_form')) }}">
                                {{ gelicon('social', 'feedback', 'gelicon--programme') }}
                            </a>
                        {% else %}
                            <a
                                {{ get_ati_attributes('social-'~details.getType()|lower)|attrs  }}
                                href="{{ details.getValue() }}" title="{{ details.getType()|capitalize }}">
                                {{ gelicon('social', details.getType(), 'gelicon--programme') }}
                            </a>
                        {% endif %}
                    </li>
                {%- endfor -%}
            </ul>
        </div>
    </div>
{%- endif -%}
