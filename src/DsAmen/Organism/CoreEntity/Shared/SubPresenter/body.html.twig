{% if body.hasFullDetails() %}
    <div class="{{ body.getOption('full_details_class') }}">
        {% if body.getOption('show_synopsis') %}
            <p class="text-subtle media__meta-row {{ body.getOption('synopsis_class') }}">{{ body.getSynopsis() }}</p>
        {% endif %}
        {% if body.hasReleaseDate() %}
            <div class="list-lined list-lined--spaced">
                <div class="list-lined__item br-keyline">
                    <h5 class="invisible">{{ tr('release_date', {'%1':''}) }}</h5>
                    <time datetime="{{ body.getReleaseDate()|local_date('Y-m-d') }}">{{ body.getReleaseDate()|local_date_intl('dd MMM Y') }}</time>
                </div>
            </div>
        {% endif %}
    </div>
{% endif %}
