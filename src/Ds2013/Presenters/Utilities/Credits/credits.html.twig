<table class="table table--slatted-vertical no-margin-vertical">
    <thead class="visually-hidden">
    <tr>
        {% if credits.shouldShowRoleColumn() %}
            <th>Role</th>
        {% endif %}
        <th>Contributor</th>
    </tr>
    </thead>
    <tbody>
    {% for contribution in credits.getContributions() %}
        <tr>
            {% if credits.shouldShowRoleColumn() %}
                <td class="br-subtle-bg-onborder">
                    {% if contribution.getCharacterName() %}
                        <span>{{ contribution.getCharacterName() }}</span>
                    {% elseif contribution.getCreditRole() %}
                        <span>{{ contribution.getCreditRole() }}</span>
                    {% else %}
                        <span>-</span>
                    {% endif %}
                </td>
            {% endif %}

            <td class="br-subtle-bg-onborder">
                {% if contribution.getContributor().getThing() %}
                    <a href="{{ path('contributor', { id: contribution.getContributor().getThing().getId() }) }}">
                        {{ contribution.getContributor().getThing().getPreferredLabel() }}
                    </a>
                    {% if contribution.getContributor().getThing().getDisambiguationHint() %}
                        <br>
                        <small>{{ contribution.getContributor().getThing().getDisambiguationHint() }}</small>
                    {% endif %}
                {% else %}
                    <span>{{ contribution.getContributor().getName() }}</span>
                {% endif %}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
