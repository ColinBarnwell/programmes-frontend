{% extends "@Ds2013/Presenters/Domain/ContentBlock/content_block.html.twig" %}

{% set componentContent = content_block.getBlock().getHtmlContent() %}

{% block extraClasses %}
    {{ build_css_classes({'component--box-flushbody': not content_block.isInPrimaryColumn()}) }}
{% endblock %}

{% block blockContent %}
    {{ componentContent|raw }}
{% endblock %}

{% block componentTitle %}
    {% if componentContent == '' %}
        <div class="br-box-subtle island">
            <{{ content_block.newHeadingLevel() }} class="beta">
                This content can't be found
            </{{ content_block.getCurrentHeading() }}>
        </div>
    {% endif %}
{% endblock %}
