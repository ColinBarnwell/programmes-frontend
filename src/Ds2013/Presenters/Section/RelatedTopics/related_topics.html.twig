<ol class="related-topics">
    {%- for relatedTopic in related_topics.getRelatedTopics() -%}
        <li>
            {% if relatedTopic.getProgrammeItemCountContext() %}
                {% set url = path('programme_topics_topic', {pid: relatedTopic.getProgrammeItemCountContext(), topic: relatedTopic.getId()}) %}
            {% else %}
                {% set url = path('topics_topic', {topic: relatedTopic.getId()}) %}
            {% endif %}
            <a class="br-linkinvert" href="{{ url }}" data-linktrack="{{ related_topics.getLinkTrack() }}">{{ relatedTopic.getTitle() }} ({{ relatedTopic.getProgrammeItemCount() }})</a>
        </li>
    {%- endfor -%}
</ol>
