{% import _self as self %}
{% set title_tag = programme_title.option('title_tag') %}
{% spaceless %}
    <{{ title_tag }} class="programme__titles">
        <a property="url" href="{{ programme_title.titleLinkUrl }}" resource="{{ programme_title.titleLinkUrl }}" class="br-blocklink__link block-link__target" data-linktrack="programmeobjectlink=title">
            <span class="programme__title {{ programme_title.option('title_classes') }}">
                {{ self.render_title(programme_title.mainTitleProgramme, programme_title) }}
            </span>
            {% if programme_title.option('show_subtitle') and programme_title.subTitlesProgrammes %}
                <span class="hidden">&mdash;</span>
                <span class="programme__subtitle centi">
                    {%- for subtitleProgramme in programme_title.subTitlesProgrammes -%}
                        {{ not loop.first ? ', ' }}{{ self.render_title(subtitleProgramme, programme_title) }}
                    {%- endfor -%}
                </span>
            {% endif %}
        </a>
    </{{ title_tag }}>
{% endspaceless %}

{% macro render_title(programme, presenter) %}
{% spaceless %}
    {%- if programme.pid != presenter.programme.pid -%} {# Do not print RDFa schema for current programme that already has it #}
        <span property="isPartOf" typeof="{{ rdfa_schema_programme_typeof(programme) }}" resource="http://www.bbc.co.uk/programmes/{{ programme.pid }}" >
            <span property="name">{{ truncate(programme.title, presenter.option('truncation_length'))}}</span>
        </span>
    {%- else -%}
        <span property="name">{{ truncate(programme.title, presenter.option('truncation_length'))}}</span>
    {%- endif -%}
{% endspaceless %}
{% endmacro %}
