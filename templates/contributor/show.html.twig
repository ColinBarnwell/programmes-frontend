{% extends 'base_ds_amen.html.twig' %}

{% block html_classes %}b-pw-1280{% endblock %}
{% block title %}BBC - Contributors - {{ thing.getPreferredLabel() }}{% endblock %}

{% block body %}
    <div class="p-g-p no-margin-vertical">
        <h1>{{ thing.getPreferredLabel() }}</h1>
        {% if thing.getDisambiguationHint() %}
            <p>{{ thing.getDisambiguationHint() }}</p>
        {% endif %}
        <div class="grid">
            <div class="grid__item 1/4"></div>
            {% if contributions is not empty %}
                <ul class="list-raw grid__item 3/4">
                    {% for contribution in contributions %}
                        <li>
                            {{ ds_amen('coreEntity', contribution, {
                                'media_variant': '',
                                'title_options': {
                                    'h_tag': 'h2',
                                    'text_colour_on_title_link': false,
                                    'title_format': 'item::ancestry_except_audio_clips'
                                },
                                'body_options': {
                                    'show_synopsis': true,
                                    'show_release_date': true
                                },
                                'image_options': {
                                    'media_panel_class': '1/3'
                                }
                            }) }}
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
    </div>
{% endblock %}
