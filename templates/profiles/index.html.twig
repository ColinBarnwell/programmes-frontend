{% extends 'base_ds2013.html.twig' %}

{% block title %}{{ meta_context.titlePrefix() }} - {{ tr('profiles') }}{% endblock %}
{% block page_classes %}text-base programmes-page--smallpush prog-layout{% endblock %}

{% block body %}
    <div class="programmes-page prog-layout__primary br-box-page">
        <h1><span class="context">{{ ds_shared('entityContext', coreEntity) }} </span>{{ tr('profiles') }}</h1>
        {% for profile in profiles %}
            <a href="{{ path('programme_profile', {'key': profile.getKey(), 'slug': profile.getSlug()}) }}">{{ profile.getTitle() }}</a>
            {% if profile.getChildren() %}
                {% for child in profile.getChildren() %}
                    <a href="{{ path('programme_profile', {'key': child.getKey(), 'slug': child.getSlug()}) }}">{{ child.getTitle() }}</a>
                {% endfor %}
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}
