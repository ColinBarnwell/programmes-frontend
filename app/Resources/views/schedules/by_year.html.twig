{% extends 'schedules/by_base.html.twig' %}

{% block date %}{{ start_of_year|local_date('Y') }}{% endblock %}

{%- block date_nav -%}
    <div id="schedule-yearnav" class="centi br-box-highlight g-f-l">
        {{ ds2013('dateList', start_of_year, service, {'format': 'year'}) }}
    </div>
{%- endblock -%}

{%- block schedule -%}
    {% if service.startDate and service.startDate > start_of_year.endOfYear%}
        {% set url = path('schedules_by_day', {pid: service.pid, date: service.startDate|local_date('Y-m-d')}) %}
    <p class="noschedule">{{ tr('schedule_begins_on', {'%1': '<a href="' ~ url ~ '">' ~ service.startDate|local_date_intl('EEEE d MMMM yyyy') ~ '</a>'})|raw }}</p>
    {% elseif service.endDate and service.endDate < start_of_year %}
        {% set url = path('schedules_by_day', {pid: service.pid, date: service.endDate|local_date('Y-m-d')}) %}
    <p class="noschedule">{{ tr('schedule_ended_on', {'%1': '<a href="' ~ url ~ '">' ~ service.endDate|local_date_intl('EEEE d MMMM yyyy') ~ '</a>'})|raw }}</p>
    {% else %}
        <div class="grid-wrapper">
            {%- for offset in 0..11 -%}
                {% set first_of_month = start_of_year.addMonths(offset) %}
                <div class="grid 1/2@bpw 1/3@bpw2 1/3@bpe">
                    {{ ds2013('calendar', first_of_month, service) }}
                </div>
            {%- endfor -%}
        </div>
    {% endif %}
{%- endblock -%}
